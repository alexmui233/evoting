<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Happy Voting</title>
  <!--CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="../css/myjoinedevent.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
  <!-- CSS only -->

  <!-- JS -->
  <script src="js/events.js"></script>

</head>

<body>
  <%- include header %>
    <div class="apdiv">
      <h1>Your joined vote event are here</h1>
      <h2>You can see what vote event you joined are listed below</h2>
      <br>
    </div>
    <% for (var i = 0; i < events.length; i++) { %>
    <div class="apbox">
      <div class="apboxcon">
        <div class="apboxdiv">
          <div style="width: max-content; height: max-content; float: right;">
            <% if (events[i].state == "result") { %>
              <a class="apbtn" href="/myjoinedevent/result/<%= events[i].eid %>">result</a>
            <% } else { %>
              <a class="apdisbtn">result</a>
            <% } %>
            <% if (events[i].state == "voting" && checkvoted[i] == false) { %>
            <a class="apbtn" href="/myjoinedevent/<%= events[i].eid %>">vote</a>
            <% } else if ((events[i].state == "voting" || events[i].state == "result") && checkvoted[i] == true) { %>
              <a class="apdisbtn">voted</a>
            <% } else { %>
              <a class="apdisbtn">vote</a>
            <% } %>
          </div>
          <div style="width: max-content;">
            <div>question: <%= events[i].question %><br>
              owner: <%= events[i].owner %><br>
              state: <%= events[i].state %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
    <script src="../js/metamask.js"></script>
</body>

</html>